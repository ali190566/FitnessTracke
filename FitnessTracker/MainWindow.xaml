<Window x:Class="FitnessTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fitness Tracker" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="Fitness Tracker" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="10">
            <Label Content="Enter your daily steps:"/>
            <TextBox x:Name="txtSteps" HorizontalAlignment="Stretch"/>
            <Button x:Name="btnSave" Content="Save" Click="btnSave_Click" Margin="0,10,0,0"/>
            <Label x:Name="lblResult" FontWeight="Bold" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
